@model RevisionPlanner.Models.Resource

@{
    ViewData["Title"] = "Delete Resource";
}

<h2>Delete Resource</h2>

<div class="alert alert-warning mt-3">
    Are you sure you want to delete this resource?
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Subject</dt>
            <dd class="col-sm-9">@(Model.Subject?.SubjectName ?? "-")</dd>

            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">URL</dt>
            <dd class="col-sm-9">
                <a href="@Model.Url" target="_blank" rel="noopener noreferrer">@Model.Url</a>
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>
