@model RevisionPlanner.Models.ViewModels.TimetableGridViewModel
@using RevisionPlanner.Enums

@{
    ViewData["Title"] = "View / Edit Timetable";

    var weekStart = Model.WeekStart.Date;
    var days = Enumerable.Range(0, 7).Select(i => weekStart.AddDays(i)).ToList();

    string DifficultyClass(DifficultyLevel d) =>
        d == DifficultyLevel.Easy ? "diff-easy" :
        d == DifficultyLevel.Medium ? "diff-medium" : "diff-hard";

    bool ExamPassed(DateTime? examDate) =>
        examDate.HasValue && examDate.Value.Date < DateTime.Today.Date;
}

<h2>View / Edit Timetable</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-warning">@TempData["ErrorMessage"]</div>
}

<div class="d-flex flex-wrap gap-2 align-items-center mb-3">
    <a class="btn btn-outline-secondary"
       asp-action="Index"
       asp-route-date="@Model.WeekStart.AddDays(-7).ToString("yyyy-MM-dd")">
        ← Previous Week
    </a>

    <div class="fw-semibold">
        Week: @Model.WeekStart.ToString("dd MMM yyyy") - @Model.WeekStart.AddDays(6).ToString("dd MMM yyyy")
    </div>

    <a class="btn btn-outline-secondary"
       asp-action="Index"
       asp-route-date="@Model.WeekStart.AddDays(7).ToString("yyyy-MM-dd")">
        Next Week →
    </a>

    <form class="ms-auto d-flex gap-2" method="get" asp-action="Index">
        <input type="date" name="date" class="form-control"
               value="@Model.SelectedDate.ToString("yyyy-MM-dd")" />
        <button type="submit" class="btn btn-primary">Go</button>
    </form>
</div>

<form asp-action="SaveGrid" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="WeekStart" value="@Model.WeekStart.ToString("yyyy-MM-dd")" />
    <input type="hidden" name="SelectedDate" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" />
    <input type="hidden" name="SlotsPerDay" value="@Model.SlotsPerDay" />

    <div class="row g-3">
        <!-- GRID -->
        <div class="col-12 col-lg-9">
            <div class="table-responsive">
                <table class="table table-bordered align-middle text-center timetable-grid">
                    <thead class="table-light">
                        <tr>
                            <th class="slot-col">Slot</th>
                            @foreach (var d in days)
                            {
                                <th class="day-col">
                                    @d.ToString("ddd")<br />
                                    <small class="text-muted">@d.ToString("dd MMM")</small>
                                </th>
                            }
                        </tr>
                    </thead>

                    <tbody>
                        @for (int slot = 1; slot <= Model.SlotsPerDay; slot++)
                        {
                            <tr>
                                <th class="table-light slot-col">#@slot</th>

                                @foreach (var day in days)
                                {
                                    var cell = Model.Cells.FirstOrDefault(c => c.Date.Date == day.Date && c.SlotNumber == slot);
                                    if (cell == null)
                                    {
                                        <td class="text-muted">N/A</td>
                                        continue;
                                    }

                                    var idx = Model.Cells.IndexOf(cell);
                                    var subject = Model.Subjects.FirstOrDefault(s => s.Id == cell.SubjectId);
                                    var isEmpty = (subject == null);

                                    <td class="drop-cell"
                                        data-cell-index="@idx"
                                        data-celldate="@day.ToString("yyyy-MM-dd")"
                                        title="@(isEmpty ? "Drop subject here" : "")"
                                        ondragover="event.preventDefault();"
                                        ondrop="handleDrop(event);">

                                        <input type="hidden" name="Cells[@idx].TimetableId" value="@cell.TimetableId" />
                                        <input type="hidden" name="Cells[@idx].Date" value="@cell.Date.ToString("yyyy-MM-dd")" />
                                        <input type="hidden" name="Cells[@idx].SlotNumber" value="@cell.SlotNumber" />

                                        <input type="hidden" class="subject-id" name="Cells[@idx].SubjectId" value="@(cell.SubjectId?.ToString() ?? "")" />
                                        <input type="hidden" class="status-val" name="Cells[@idx].Status" value="@(cell.Status ?? "")" />

                                        <div class="subject-box @((subject != null) ? DifficultyClass(subject.Difficulty) : "")">

                                            <!-- Top-right clear button (hidden if empty) -->
                                            <div class="subject-box-top @(isEmpty ? "hide-controls" : "")">
                                                <button type="button"
                                                        class="btn-clear"
                                                        title="Clear"
                                                        onclick="clearCell(@idx)">
                                                    ×
                                                </button>
                                            </div>

                                            <!-- Subject name (blank when empty) -->
                                            <div class="subject-name">
                                                @(subject != null ? subject.SubjectName : "")
                                            </div>

                                            <!-- Status bottom-right (hidden if empty) -->
                                            <button type="button"
                                                    class="status-pill @(isEmpty ? "hide-controls" : "")"
                                                    title="Click to change status"
                                                    onclick="cycleStatus(@idx)">
                                                @(
                                                                                        string.Equals(cell.Status, "Completed", StringComparison.OrdinalIgnoreCase) ? "✓" :
                                                                                        string.Equals(cell.Status, "Incomplete", StringComparison.OrdinalIgnoreCase) ? "✗" :
                                                                                        ""
                                                                                        )
                                            </button>
                                        </div>

                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <button type="submit" class="btn btn-primary">
                Save Timetable
            </button>
        </div>

        <!-- SUBJECTS PANEL -->
        <div class="col-12 col-lg-3">
            <div class="card shadow-sm">
                <div class="card-header">
                    Subjects (Drag & Drop)
                </div>
                <div class="card-body">
                    @if (!Model.Subjects.Any())
                    {
                        <p class="text-muted mb-0">No subjects found. Create subjects first.</p>
                    }
                    else
                    {
                        <div class="d-grid gap-2">
                            @foreach (var s in Model.Subjects)
                            {
                                var examPassed = ExamPassed(s.ExamDate);

                                int? daysToExam = s.ExamDate.HasValue
                                ? (int?)(s.ExamDate.Value.Date - DateTime.Today.Date).TotalDays
                                : null;

                                string badgeClass =
                                daysToExam.HasValue && daysToExam.Value <= 2 ? "badge-soon" :
                                daysToExam.HasValue && daysToExam.Value <= 7 ? "badge-upcoming" :
                                "";

                                string badgeText =
                                !daysToExam.HasValue ? "" :
                                daysToExam.Value < 0 ? "Exam passed" :
                                daysToExam.Value == 0 ? "Exam today" :
                                daysToExam.Value == 1 ? "Exam in 1 day" :
                                $"Exam in {daysToExam.Value} days";

                                <div class="subject-card @DifficultyClass(s.Difficulty) @(examPassed ? "subject-passed" : "")"
                                     draggable="true"
                                     ondragstart="handleDragStart(event)"
                                     data-subjectid="@s.Id"
                                     data-subjectname="@s.SubjectName"
                                     data-difficulty="@s.Difficulty"
                                     data-examdate="@(s.ExamDate.HasValue? s.ExamDate.Value.ToString("yyyy-MM-dd") : "")">
                                    <div class="subject-card-title">
                                        <span>@s.SubjectName</span>
                                        <span class="difficulty-dot"></span>
                                    </div>

                                    <div class="subject-card-sub">
                                        <span>@(s.ExamDate.HasValue ? $"Exam: {s.ExamDate.Value:dd MMM yyyy}" : "Exam: not set")</span>

                                        @if (examPassed)
                                        {
                                            <span class="exam-badge badge-passed">Exam passed</span>
                                        }
                                        else if (daysToExam.HasValue && daysToExam.Value >= 0 && daysToExam.Value <= 7)
                                        {
                                            <span class="exam-badge @badgeClass">@badgeText</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="mt-3 small text-muted">
                            Tip: Drag a subject from above and drop it into a timetable cell.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <style>
        /* Compact grid */
        .timetable-grid td {
            min-width: 115px;
            padding: 6px;
        }

        .slot-col {
            width: 70px;
            font-size: 13px;
        }

        .day-col {
            font-size: 13px;
        }

        .drop-cell {
            vertical-align: top;
        }

        /* Compact subject box */
        .subject-box {
            position: relative;
            border: 1px solid rgba(0,0,0,.12);
            border-radius: 10px;
            background: #fff;
            min-height: 60px;
            padding: 6px;
            text-align: left;
        }

        /* Difficulty tint */
        .diff-easy {
            background: rgba(46, 204, 113, .16);
        }

        .diff-medium {
            background: rgba(241, 196, 15, .20);
        }

        .diff-hard {
            background: rgba(231, 76, 60, .16);
        }

        /* Clear button top-right */
        .subject-box-top {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 2px;
        }

        .btn-clear {
            width: 18px;
            height: 18px;
            border-radius: 7px;
            border: 1px solid rgba(0,0,0,.18);
            background: #fff;
            line-height: 14px;
            font-size: 13px;
            padding: 0;
            cursor: pointer;
        }

        /* Subject name in cell: 8px */
        .subject-name {
            padding-right: 24px;
            color: rgba(0,0,0,.85);
            line-height: 1.1;
            min-height: 12px;
            font-size: 8px;
        }

        /* Status bottom-right */
        .status-pill {
            position: absolute;
            right: 6px;
            bottom: 6px;
            width: 20px;
            height: 18px;
            border-radius: 8px;
            border: 1px solid rgba(0,0,0,.18);
            background: #fff;
            font-size: 11px;
            line-height: 14px;
            padding: 0;
            cursor: pointer;
            text-align: center;
        }

        /* Hide controls in empty cells */
        .hide-controls {
            display: none !important;
        }

        /* Subject panel smaller */
        .subject-card {
            border: 1px solid rgba(0,0,0,.12);
            border-radius: 12px;
            padding: 8px;
            background: #fff;
            cursor: grab;
            user-select: none;
            font-size: 12px;
        }

            .subject-card:active {
                cursor: grabbing;
            }

        .subject-card-title {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 4px;
            font-size: 12px;
        }

        .subject-card-sub {
            display: flex;
            justify-content: space-between;
            gap: 6px;
            color: rgba(0,0,0,.55);
            font-size: 11px;
            flex-wrap: wrap;
        }

        .difficulty-dot {
            width: 10px;
            height: 10px;
            border-radius: 4px;
            border: 1px solid rgba(0,0,0,.15);
            display: inline-block;
        }

        .subject-card.diff-easy .difficulty-dot {
            background: #2ecc71;
        }

        .subject-card.diff-medium .difficulty-dot {
            background: #f1c40f;
        }

        .subject-card.diff-hard .difficulty-dot {
            background: #e74c3c;
        }

        .exam-badge {
            padding: 2px 6px;
            border-radius: 999px;
            border: 1px solid rgba(0,0,0,.12);
            font-weight: 600;
            font-size: 10px;
            background: #fff;
            white-space: nowrap;
        }

        .badge-soon {
            background: rgba(220,53,69,.18);
        }

        .badge-upcoming {
            background: rgba(241,196,15,.25);
        }

        /* Exam passed grey */
        .subject-passed {
            opacity: 0.55;
            filter: grayscale(1);
        }

        .badge-passed {
            background: rgba(120,120,120,.18);
        }
    </style>

    <script>
        let dragData = null;

        function handleDragStart(ev) {
            const el = ev.currentTarget;
            dragData = {
                subjectId: el.dataset.subjectid,
                subjectName: el.dataset.subjectname,
                difficulty: el.dataset.difficulty,
                examDate: el.dataset.examdate
            };
            ev.dataTransfer.effectAllowed = "copy";
        }

        function handleDrop(ev) {
            ev.preventDefault();
            const td = ev.currentTarget;
            const idx = td.dataset.cellIndex;
            const cellDateStr = td.dataset.celldate;

            if (!dragData || idx === undefined) return;

            // Do not allow scheduling AFTER exam date
            if (dragData.examDate) {
                const exam = new Date(dragData.examDate + "T00:00:00");
                const cellDate = new Date(cellDateStr + "T00:00:00");

                if (cellDate > exam) {
                    alert(`You cannot schedule "${dragData.subjectName}" after its exam date (${formatDate(exam)}).`);
                    return;
                }
            }

            td.querySelector("input.subject-id").value = dragData.subjectId;
            td.querySelector(".subject-name").textContent = dragData.subjectName;

            // difficulty tint
            const box = td.querySelector(".subject-box");
            box.classList.remove("diff-easy", "diff-medium", "diff-hard");
            const d = (dragData.difficulty || "").toLowerCase();
            if (d.includes("easy")) box.classList.add("diff-easy");
            else if (d.includes("medium")) box.classList.add("diff-medium");
            else if (d.includes("hard")) box.classList.add("diff-hard");

            // show controls now that cell has subject
            td.querySelector(".subject-box-top").classList.remove("hide-controls");
            td.querySelector(".status-pill").classList.remove("hide-controls");

            // remove tooltip once filled
            td.title = "";
        }

        // Cycle: blank -> Completed -> Incomplete -> blank
        function cycleStatus(idx) {
            const td = document.querySelector(`td.drop-cell[data-cell-index="${idx}"]`);
            if (!td) return;

            const subjectId = td.querySelector("input.subject-id").value;
            if (!subjectId) {
                alert("Please drop a subject first.");
                return;
            }

            const statusInput = td.querySelector("input.status-val");
            const btn = td.querySelector(".status-pill");
            const cur = (statusInput.value || "").toLowerCase();

            let next = "";
            if (cur === "") next = "Completed";
            else if (cur === "completed") next = "Incomplete";
            else next = "";

            statusInput.value = next;
            btn.textContent = (next === "Completed") ? "✓" : (next === "Incomplete") ? "✗" : "";
        }

        function clearCell(idx) {
            const td = document.querySelector(`td.drop-cell[data-cell-index="${idx}"]`);
            if (!td) return;

            td.querySelector("input.subject-id").value = "";
            td.querySelector("input.status-val").value = "";
            td.querySelector(".subject-name").textContent = "";

            const box = td.querySelector(".subject-box");
            box.classList.remove("diff-easy", "diff-medium", "diff-hard");

            td.querySelector(".status-pill").textContent = "";

            // hide controls when empty
            td.querySelector(".subject-box-top").classList.add("hide-controls");
            td.querySelector(".status-pill").classList.add("hide-controls");

            // restore tooltip
            td.title = "Drop subject here";
        }

        function formatDate(d) {
            return d.toLocaleDateString(undefined, { year: 'numeric', month: 'short', day: '2-digit' });
        }
    </script>
}
