@model RevisionPlanner.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="EmailId" class="form-label"></label>
        <input asp-for="EmailId" class="form-control" />
        <span asp-validation-for="EmailId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EmailPassword" class="form-label"></label>
        <input asp-for="EmailPassword" class="form-control" />
        <span asp-validation-for="EmailPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Sign in</button>

    <a class="btn btn-secondary ms-2" asp-controller="Users" asp-action="Create">
        Sign up
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
